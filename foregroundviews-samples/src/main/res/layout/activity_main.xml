<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="4dp"
    >

  <com.cesards.android.foregroundviews.ForegroundRelativeLayout
      android:id="@+id/relatives"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:background="@drawable/bg_card"
      custom:fv_foreground="@drawable/fg_card"
      >

    <com.cesards.android.foregroundviews.ForegroundTextView
        android:id="@android:id/text1"
        style="@android:style/TextAppearance.Large"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:gravity="center"
        android:text="RelativeLayout List"
        />

  </com.cesards.android.foregroundviews.ForegroundRelativeLayout>
  >

  <com.cesards.android.foregroundviews.ForegroundLinearLayout
      android:id="@+id/linears"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:background="@drawable/bg_card"
      custom:fv_foreground="@drawable/fg_card"
      >

    <TextView
        android:id="@android:id/text1"
        style="@android:style/TextAppearance.Large"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:gravity="center"
        android:text="LinearLayout List"
        />

  </com.cesards.android.foregroundviews.ForegroundLinearLayout>

  <com.cesards.android.foregroundviews.ForegroundTextView
      android:id="@+id/texts"
      style="@android:style/TextAppearance.Large"
      android:layout_width="match_parent"
      android:layout_height="?android:attr/actionBarSize"
      android:layout_marginTop="8dp"
      android:background="@drawable/bg_card"
      android:gravity="center"
      android:text="TextView List"
      custom:fv_foreground="@drawable/fg_card"
      />

  <com.cesards.android.foregroundviews.ForegroundTextView
      android:id="@+id/images"
      style="@android:style/TextAppearance.Large"
      android:layout_width="match_parent"
      android:layout_height="?android:attr/actionBarSize"
      android:layout_marginTop="8dp"
      android:background="@drawable/bg_card"
      android:gravity="center"
      android:text="ImageView List"
      custom:fv_foreground="@drawable/fg_card"
      />

</LinearLayout>